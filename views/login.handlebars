
<form action='/user/login' method='post' class="form" id="login-form">

<h1>Login</h1>
  <div class='form-control'>
    <label for="email">E-mail</label>
    <input
      type='email'
      name='email'
      placeholder='E-mail'
    /></div>


  <div class='form-control'>
    <label for="password">Senha</label>
    <input
      type='password'
      name='password'
      placeholder='Senha'
    /></div>

  <input type='submit' value='Entrar' class="button" />

</form>